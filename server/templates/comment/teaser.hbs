<div id="comment-teaser-{{record.id}}" class="comment-teaser" data-we-model="comment" data-we-modelId="{{record.id}}" >
  {{#if record.creator}}
    {{#link-to 'user.findOne' record.creatorId class="comment-creator-avatar"}}
      {{we-avatar id=record.creatorId style='thumbnail'}}
      <span class='creator-displayName'>{{record.creator.displayName}}</span>
    {{/link-to}}
  {{/if}}

  <span class="post-date">{{we-time-ago record.createdAt locals=locals}}</span>
  <div class="comment-body">{{{record.body}}}</div>
  <div class="comment-footer">
    <div class="comment-actions">
      {{we-action-edit-btn 'comment'  record locals.req record.id}}
      {{we-action-delete-btn 'comment' record locals.req record.id}}
    </div>
  </div>
</div>